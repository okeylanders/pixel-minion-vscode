{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@messages": ["src/shared/types/messages/index.ts"],
      "@messages/*": ["src/shared/types/messages/*"],
      "@components/*": ["src/presentation/webview/components/*"],
      "@hooks": ["src/presentation/webview/hooks"],
      "@hooks/*": ["src/presentation/webview/hooks/*"],
      "@utils/*": ["src/presentation/webview/utils/*"]
    }
  },
  "include": [
    "src/presentation/webview/**/*",
    "src/shared/**/*"
  ]
}
