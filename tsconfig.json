{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@messages": ["src/shared/types/messages/index.ts"],
      "@messages/*": ["src/shared/types/messages/*"],
      "@handlers/*": ["src/application/handlers/*"],
      "@services/*": ["src/infrastructure/api/services/*"],
      "@secrets": ["src/infrastructure/secrets"],
      "@ai": ["src/infrastructure/ai"],
      "@ai/*": ["src/infrastructure/ai/*"],
      "@logging": ["src/infrastructure/logging"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test", "dist", "src/presentation/webview"]
}
