{
  "name": "pixel-minion",
  "displayName": "Pixel Minion",
  "description": "AI-powered image and SVG generation inside VSCode",
  "version": "0.1.0",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pixel-minion-vscode.git"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:pixelMinion.mainView",
    "onCommand:pixelMinion.openSettings",
    "onCommand:pixelMinion.showOutput",
    "onCommand:pixelMinion.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pixel-minion",
          "title": "Pixel Minion",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "pixel-minion": [
        {
          "type": "webview",
          "id": "pixelMinion.mainView",
          "name": "Main View"
        }
      ]
    },
    "commands": [
      {
        "command": "pixelMinion.openSettings",
        "title": "Pixel Minion: Settings",
        "icon": "$(gear)"
      },
      {
        "command": "pixelMinion.showOutput",
        "title": "Pixel Minion: Show Debug Output",
        "icon": "$(bug)"
      },
      {
        "command": "pixelMinion.helloWorld",
        "title": "Pixel Minion: Hello World",
        "icon": "$(comment-discussion)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pixelMinion.showOutput",
          "when": "view == pixelMinion.mainView",
          "group": "navigation@1"
        },
        {
          "command": "pixelMinion.openSettings",
          "when": "view == pixelMinion.mainView",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Pixel Minion",
      "properties": {
        "pixelMinion.maxConversationTurns": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of conversation turns to maintain in context"
        },
        "pixelMinion.openRouterModel": {
          "type": "string",
          "default": "anthropic/claude-sonnet-4",
          "description": "OpenRouter model ID to use for AI features"
        },
        "pixelMinion.outputDirectory": {
          "type": "string",
          "default": "pixel-minion",
          "description": "Directory (relative to workspace root) where generated images and SVGs are saved"
        },
        "pixelMinion.imageModel": {
          "type": "string",
          "default": "google/gemini-3-pro-preview",
          "description": "Selected model for image generation (recommended: Gemini Pro 3)"
        },
        "pixelMinion.svgModel": {
          "type": "string",
          "default": "openai/gpt-5.1-codex",
          "description": "Selected model for SVG generation (recommended: GPT-5.1 Codex or Gemini Pro 3)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts,tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "autoprefixer": "^10.4.0",
    "css-loader": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^8.0.0",
    "prettier": "^3.0.0",
    "style-loader": "^3.0.0",
    "tailwindcss": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "marked": "^12.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
