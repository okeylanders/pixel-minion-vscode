{
  "name": "vscode-extension-template",
  "displayName": "VSCode Extension Template",
  "description": "A well-architected VSCode extension template with AI integration",
  "version": "0.1.0",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vscode-extension-template.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "template-extension",
          "title": "Extension Template",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "template-extension": [
        {
          "type": "webview",
          "id": "templateExtension.mainView",
          "name": "Main View"
        }
      ]
    },
    "commands": [
      {
        "command": "templateExtension.openSettings",
        "title": "Extension Template: Settings",
        "icon": "$(gear)"
      },
      {
        "command": "templateExtension.showOutput",
        "title": "Extension Template: Show Output",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "templateExtension.showOutput",
          "when": "view == templateExtension.mainView",
          "group": "navigation@1"
        },
        {
          "command": "templateExtension.openSettings",
          "when": "view == templateExtension.mainView",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Extension Template",
      "properties": {
        "templateExtension.maxConversationTurns": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of conversation turns to maintain in context"
        },
        "templateExtension.openRouterModel": {
          "type": "string",
          "default": "anthropic/claude-sonnet-4",
          "description": "OpenRouter model ID to use for AI features"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts,tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "autoprefixer": "^10.4.0",
    "css-loader": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^8.0.0",
    "prettier": "^3.0.0",
    "style-loader": "^3.0.0",
    "tailwindcss": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "marked": "^12.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
